        </li>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/dashboard">Advice</a>
        </li>
        <% } %>
      </ul>
      <ul class="navbar-nav">
        <% if (isAuthenticated) { %>
        <li class="nav-item dropdown">
          <a class="nav-link" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-bell"></i><span class="badge badge-primary"><%- notifications.length == "0" ? "" : notifications.length %></span>
          </a>
          <ul class="dropdown-menu dropdown-menu-lg-end dropdown-menu-dark notification" aria-labelledby="navbarDropdown">
            <% if (notifications.length) { %>
              <% for( let index = 0; index < notifications.length; index++ ) { %>
                <li class="dropdown-item" style="position: relative;">
                  <h6 class="me-auto"><%- notifications[index].actor %> <a href="/form/complaints/<%- notifications[index].complaint_id %>"><%- notifications[index].message %></a></h6>
                  <small><%- notifications[index].date %></small>
                  <a class="link-danger" href="/form/notification/<%- notifications[index]._id %>"><i
                      class="far fa-window-close" style="position: absolute; right: 20px; top: 5px;"></i></a>
                </li>
                <li>
                  <hr class="dropdown-divider">
