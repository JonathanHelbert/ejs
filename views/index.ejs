<script>
    function changebg() {
        var navi = document.getElementById('navi');
        var scrollValue = window.scrollY;

        if (scrollValue < 100) {
            navi.classList.remove('scrolling-active');
        } else {
            navi.classList.add('scrolling-active');
        }


    }

    window.addEventListener('scroll', changebg);
</script>

